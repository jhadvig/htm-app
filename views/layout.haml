    %script{:src => "/js/jquery-1.10.0.min.js"}
    %script{:src => "/js/bootstrap/js/bootstrap.min.js"}
    %script{:src => "/js/jquery.carousel.fullscreen.js"}
  %body
    #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
      / %ol.carousel-indicators
      /   %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
      /   %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
      /   %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
      .carousel-inner
        .item.active
          %img{:alt => "", :src => "/images/14.jpg"}/
        .item
          %img{:alt => "", :src => "/images/12.jpg"}/
        .item
          %img{:alt => "", :src => "/images/13.jpg"}/
        .item
          %img{:alt => "", :src => "/images/3.jpg"}/
          / .container
          /   .carousel-caption
          /     %h1 Bootstrap Carousel Fullscreen
          /     %p.lead Just turns the Twitter Bootstrap Carousel in fullscreen mode, and scale to fit the screen resolution

        .item
          %img{:alt => "", :src => "/images/2.jpg"}/
          / .container
          /   .carousel-caption
          /     %h1 Bootstrap Carousel Fullscreen
          /     %p.lead Just turns the Twitter Bootstrap Carousel in fullscreen mode, and scale to fit the screen resolution

      / %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic"}
      /   %span.glyphicon.glyphicon-chevron-left
      / %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
      /   %span.glyphicon.glyphicon-chevron-right


    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"}
            %img.logo{:src => "/images/htm-logo.png"}
        .collapse.navbar-collapse.pull-right
          %ul.nav.navbar-nav
            %li.main
              %a{:href => "/"} Úvod
            / %li.about
            /   %a{:href => "/about"} O nás
            %li.service
              %a{:href => "/service"} Služby
            %li.contact
              %a{:href => "/contact"} Kontakt

    .content
      .progressbar
      .container.body
        = yield
    #myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
            %h3#myModalLabel.modal-title Kontaktovať konatela firmy
            %h3#myModalLabel.modal-title Ing. Ivan Hadvig
          .modal-body
            %form{:role => "form"}
              .form-group
                %input#senderEmail.form-control{:placeholder => "Váš @-mail", :type => "email"}
              .form-group
                %input#senderSubject.form-control{:placeholder => "Predmet", :type => "subject"}
              .form-group
                %textarea.form-control{:rows => "5"}
              %button.btn.btn-primary{:type => "submit"} Odoslať
              %button.btn.btn-danger{"data-dismiss" => "modal", :type => "button"} Zavrieť

